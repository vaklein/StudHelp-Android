<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:text="Username"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/advertisement_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginStart="15dp"
            android:text="Advertisement title"
            android:textColor="@color/light_salmon"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/advertisement_description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advertisement_title_view"
            android:layout_marginStart="15dp"
            android:text="This is the description of an advertisement"
            android:textSize="15sp" />



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>